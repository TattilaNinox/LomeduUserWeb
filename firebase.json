{
  "functions": {
    "source": "functions",
    "runtime": "nodejs18",
    "region": "europe-west1"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "site": "lomedu-user-web",
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/**",
        "headers": [
          { "key": "Cache-Control", "value": "no-store, must-revalidate" }
        ]
      }
    ]
  }
}
